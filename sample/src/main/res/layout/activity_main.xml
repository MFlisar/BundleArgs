<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btTry1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try starting activity (builder style)"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btTry2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try starting activity (constructor args)"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btTry3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try starting activity (constructor args + setter prefix)"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btTry4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try starting activity (constructor args with missing mandatory fields)"
        android:layout_gravity="center"/>

</LinearLayout>